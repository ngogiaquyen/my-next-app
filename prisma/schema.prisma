datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model FlashCard {
  id        Int      @id @default(autoincrement())
  chinese   String
  pinyin    String
  meaning   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
